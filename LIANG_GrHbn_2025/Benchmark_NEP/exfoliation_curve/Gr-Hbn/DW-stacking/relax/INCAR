Global Parameters
ISTART =  0            # (Read existing wavefunction; if there)
ISPIN  =  1            # (Non-Spin polarised DFT)
ICHARG =  2            # (The initial guess charge density is generated by superposition of atomic charge density)
LREAL  =  Auto         # Projection operators are evaluated in (F:reciprocal space) (T:real space(not recommended)
LWAVE  =  F            # (Write WAVECAR file or not)
LCHARG =  F            # (Write CHGCAR file or not)
#ADDGRID= .TRUE.        # (Increase grid; helps GGA convergence)

KGAMMA   = .TRUE.      # GAMMA point
KSPACING = 0.15        # automatically calculate k-points

ENCUT  =  850          # (Cut-off energy for plane wave basis set, in eV)
IVDW   =  202          # (The many-body dispersion energy method)
PREC   =  Accurate     # (Precision level: Normal or Accurate, set Accurate when perform structure lattice relaxation calculation)
 
#Electronic Relaxation
ISMEAR =  0            # (Gaussian smearing, metals:1)
SIGMA  =  0.02         # (Smearing value in eV, metals:0.2)
ALGO   =  Fast         # To specify the electronic minimisation algorithm
NELM   =  120          # (Max electronic SCF steps)
NELMIN =  6            # (Min electronic SCF steps)
EDIFF  =  1E-9         # (SCF energy convergence, in eV)

#Ionic Relaxation
NSW    =  500          # (number of ionic steps)
IBRION =  2            # (Algorithm: 0-MD; 1-Quasi-New; 2-CG)
ISIF   =  3            # (Stress/relaxation: 2-Ions, 3-Shape/Ions/V, 4-Shape/Ions)
EDIFFG =  -1E-04       # (Ionic convergence; negetive -- force (eV/AA)
ISYM   =  -1           # (Symmetry: 0=none, 2=symmetrization of the charge density,  ISYM=-1 the use of symmetry is switched off completely.)
NCORE  =  8            # NCORE determines the number of compute cores that work on an individual orbital 
